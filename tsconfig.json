{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"declaration": false,
		"lib": ["ES2022", "DOM"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}